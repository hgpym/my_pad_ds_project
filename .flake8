[flake8]
max-line-length = 99
extend-ignore = E203, W503, W293, E402, W391, W292, W291, F541, E501
# W293 - blank line contains whitespace
# W391 - blank line at end of file
# W292 - no newline at end of file
# W291 - trailing whitespace
# E402 - module level import not at top of file (нужно для sys.path манипуляций)
# F541 - f-string is missing placeholders
per-file-ignores =
    __init__.py:F401
exclude =
    .git,
    __pycache__,
    build,
    dist,
    docs,
    .cache,
    .env,
    env
